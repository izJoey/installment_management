<odoo>
  <data>
    <record id="access_installment_user" model="ir.rule">
      <field name="name">Installment User Access</field>
      <field name="model_id" ref="installment_management.model_installment_installment" />
      <field name="groups" eval='[(4, ref("installment_management.group_installment_user"))]' />
      <field name="perm_read" eval="1" />
      <field name="perm_create" eval="1" />
      <field name="perm_write" eval="1" />
      <field name="perm_unlink" eval="0" />
    </record>

    <record id="access_installment_manager" model="ir.rule">
      <field name="name">Installment Manager Access</field>
      <field name="model_id" ref="installment_management.model_installment_installment" />
      <field name="groups" eval='[(4, ref("installment_management.group_installment_manager"))]' />
      <field name="perm_read" eval="1" />
      <field name="perm_create" eval="1" />
      <field name="perm_write" eval="1" />
      <field name="perm_unlink" eval="1" />
    </record>
  </data>
</odoo>

